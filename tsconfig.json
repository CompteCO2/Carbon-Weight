{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2019"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "dist",
    "paths": {
      "@/data/*": ["public/assets/*"],
      "@/helpers/*": ["src/helpers/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "exclude": ["node_modules", "dist", "**/__tests__/*"],
  "include": ["src"],
  "main": "dist/index.js"
}
